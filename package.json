{
  "name": "configg",
  "version": "1.2.1",
  "description": "A node configuration manager",
  "keywords": [
    "conf",
    "config",
    "config-node",
    "configuration",
    "env",
    "environment",
    "node-config"
  ],
  "homepage": "https://github.com/commenthol/configg",
  "bugs": {
    "url": "https://github.com/commenthol/configg/issues"
  },
  "repository": {
    "type": "git",
    "url": "github.com/commenthol/configg"
  },
  "license": "MIT",
  "author": "commenthol <commenthol@gmail.com>",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf jsdoc coverage node_modules *.tgz",
    "cover": "nyc -r text -r html npm test",
    "doc": "jsdox -o docs index.js lib/*.js",
    "lint": "eslint --cache '**/*.js'",
    "prepare": "npm run lint && npm test",
    "test": "mocha"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "standard",
    "plugins": [
      "standard"
    ]
  },
  "dependencies": {
    "at-line": "^1.0.0",
    "coffeescript": "^2.3.2",
    "cson": "^5.1.0",
    "debug": "^4.1.1",
    "find-root": "^1.1.0",
    "hashtree": "^0.7.0",
    "hjson": "^3.1.2",
    "js-yaml": "^3.12.1",
    "json5": "^2.1.0",
    "lodash": "^4.17.11",
    "properties": "^1.2.1",
    "toml": "^2.3.5"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "maintainers": "commenthol <commenthol@gmail.com>"
}
